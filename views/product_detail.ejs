
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/detail.css">
</head>
<body>

    
    <section class="body_detail">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <div class="box_product">
                            <img src="../public/img/<%=sp.image%>" alt="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="info_product">
                        <div class="name">
                            <h3><%=sp.name%></h3>
                            <p class="price"><%=sp.price%>đ</p>
                           <form action="" method="post">
                            <h4 class="topping">Topping:</h4>
                            <% dsTP.forEach(tp => { %>
                                <input type="checkbox" name="toppingList" id="tp-<%=tp.id%>" value="<%=tp.id%>">
                                <label for="<%=tp.id%>">
                                    <img src="../public/img/<%=tp.image%>" width="30px" alt="">
                                    <%=tp.name%>
                                </label><br>
                                <% }); %>
                                <div class="size">
                                    <h3>Size:</h3>
                                    <span>M</span>
                                    <span>L</span>
                                    <span>XL</span>
                                    <span>XXL</span>
                                </div>
                               
                                <label style="font-size: 18px;"  for="quantity" id="quantity" name="quantity">Số lượng:</label>
                                <input class="detail_sl" type="number" name="quantity" id="quantity" value="1" min="1"><br>
                                <button class="cart_detail" type="submit" class="cart">Thêm vào giỏ</button>
                                <button>   <a href="/product_cart"><i class='bx bxs-cart' ></i></a> </button>
                               
                                    <!-- <div class="go-to-cart">
                                        <a href="/product_cart">
                                        <i class='bx bxs-cart' alt="Go to cart" ></i>
                                        </a>
                                    </div> -->
                                    
                           </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
</body>
</html>


    
